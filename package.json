{
  "name": "microservice-router",
  "version": "1.0.0",
  "description": "URL router for micro services",
  "main": "router-admin.js",
  "scripts": {
    "test": "node_modules/.bin/mocha --timeout 15000",
    "start-admin": "DEBUG=http:log,cluster:*,router:* node  --max-old-space-size=520 router-admin.js >> `cat .env|grep LOGFILE|awk -F= {'print$2'}` 2>&1 &",
    "start-proxy": "DEBUG=http:log,cluster:*,router:* node  --max-old-space-size=520 router-proxy.js >> `cat .env|grep LOGFILE|awk -F= {'print$2'}` 2>&1 &",
    "stop-admin": "cat `cat .env|grep PIDFILE|awk -F= {'print$2'}` |xargs kill -2  2>&1 &",
    "stop-proxy": "cat `cat .env|grep PIDFILE|awk -F= {'print$2'}`.proxy |xargs kill -2  2>&1 &",
    "jscs": "jscs --fix router-admin.js router-proxy.js",
    "devel-start-admin": "DEBUG=* node  --max-old-space-size=520 router-admin.js",
    "devel-start-proxy": "DEBUG=* node  --max-old-space-size=520 router-proxy.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itpatrol/microservice-router.git"
  },
  "author": "Gormartsen",
  "license": "SEE LICENSE IN <LICENSE.txt>",
  "bugs": {
    "url": "https://github.com/itpatrol/microservice-router/issues"
  },
  "homepage": "https://github.com/itpatrol/microservice-router#readme",
  "dependencies": {
    "debug": "^2.2.0",
    "dotenv": "^2.0.0",
    "microservice-cluster": "github:itpatrol/microservice-cluster",
    "microservice": "github:itpatrol/microservice"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.0.0",
    "microservice-client": "github:itpatrol/microservice-client"
  }
}
